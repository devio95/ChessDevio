<Window x:Class="ChessDevio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessDevio"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Chess Devio" Height="982" Width="1000" Icon="Images\Knight.png">
    <Grid x:Name="gMain">
        <Grid.RowDefinitions>
            <RowDefinition Height="1210*"/>
            <RowDefinition Height="63*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="821*"/>
                <ColumnDefinition Width="173*"/>
            </Grid.ColumnDefinitions>
            <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="Chess by devio - 2020" Grid.Column="1"/>
            <Image HorizontalAlignment="Right" Source="Images/Knight.png"/>
        </Grid>
        <DockPanel x:Name="dpMain" Grid.Row="0" Margin="10"/>
    </Grid>
</Window>
